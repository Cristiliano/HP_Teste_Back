{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "HttpClients": {
    "TimeoutSeconds": 30,
    "BrasilApi": {
      "BaseUrl": "https://brasilapi.com.br/"
    },
    "ViaCep": {
      "BaseUrl": "https://viacep.com.br/"
    }
  },
  "ResiliencePolicy": {
    "RetryCount": 3,
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "SamplingDurationSeconds": 30,
      "MinimumThroughput": 3,
      "DurationOfBreakSeconds": 60
    }
  }
}
