{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDb": {
    "UseInMemory": true
  },
  "HttpClients": {
    "TimeoutSeconds": 30,
    "BrasilApi": {
      "BaseUrl": "https://brasilapi.com.br/"
    },
    "ViaCep": {
      "BaseUrl": "https://viacep.com.br/"
    },
    "OpenMeteo": {
      "BaseUrl": "https://api.open-meteo.com/"
    },
    "OpenMeteoGeocoding": {
      "BaseUrl": "https://geocoding-api.open-meteo.com/"
    },
    "OpenWeatherMap": {
      "BaseUrl": "https://api.openweathermap.org/",
      "ApiKey": "4d06612a4cfae0c41e132217837e197c"
    }
  },
  "ResiliencePolicy": {
    "RetryCount": 3,
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "SamplingDurationSeconds": 30,
      "MinimumThroughput": 3,
      "DurationOfBreakSeconds": 60
    }
  }
}
